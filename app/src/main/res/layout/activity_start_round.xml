<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_round"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.murraystudios.graham.wmgc.StartRound"
    android:orientation="vertical">

    <TextView
        android:text="Players Playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="18sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold"
        android:layout_marginBottom="20dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rb1Player"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center"
        android:id="@+id/rgPlayerAmount"
        android:layout_marginTop="12dp">

        <RadioButton
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb1Player"
            android:layout_weight="1" />

        <RadioButton
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb2Players"
            android:layout_weight="1" />

        <RadioButton
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb3Players"
            android:layout_weight="1" />

        <RadioButton
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb4Players"
            android:layout_weight="1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/rbDiffBlue"
        android:layout_marginTop="12dp">
        <RadioButton
            android:text="Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbDiffBlue"
            android:layout_weight="1"/>
        <RadioButton
            android:text="White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_weight="1"/>
        <RadioButton
            android:text="Gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1"/>
        <RadioButton
            android:text="Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_weight="1"/>
    </RadioGroup>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etP1Name"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:hint="Player 1 Name"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="12dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etP2Name"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:hint="Player 2 Name"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etP3Name"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:hint="Player 3 Name"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etP4Name"
        android:hint="Player 4 Name"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-smallcaps"
        android:inputType="text"/>

    <Button
        android:text="Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:layout_marginTop="50dp" />
</LinearLayout>
